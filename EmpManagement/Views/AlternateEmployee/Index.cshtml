
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AlternateEmployee Project List</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>
</head>
<body>
    <a asp-controller="AlternateEmployee" asp-action="add">Add</a>

    <a asp-controller="mainhome" asp-action="newindex">Index</a>
    <div class="container-fluid py-4">
        <h4 class="text-center text-uppercase">AlternateEmployee Project List</h4>
        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-white">
                <tr>

                    <th>Id</th>
                    <th>Name</th>
                    <th>Location</th>
                    <th> Availability </th>
                    <th>Role </th>
                    <th>Status</th>
                    <th> StartDate</th>
                    <th> HomeAddress</th>

                    <th>ReportsTo</th>
                    <th>EmailAddress</th>
                    <th> Dob </th>
                    <th>  PassportDate</th>
                    <th> SalaryDate </th>
                    <th> MedicalInsuranceDate</th>
                    <th>EidaDate </th>

                    <th>Objective</th>

                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var AlternateEmployee in ViewBag.AlternateEmployee)
                {
                    <tr>
                        <td>@AlternateEmployee.Id</td>
                        <td>@AlternateEmployee.Name</td>
                        <td>@AlternateEmployee.Location</td>
                        <td>@AlternateEmployee.Availability</td>

                        <td>@AlternateEmployee.Role</td>

                        <td>@AlternateEmployee.Status</td>
                        <td>@AlternateEmployee.StartDate</td>
                        <td>@AlternateEmployee.HomeAddress</td>
                        <td>@AlternateEmployee.ReportsTo</td>
                        <td>@AlternateEmployee.EmailAddress</td>
                        <td>@AlternateEmployee.Dob</td>
                        <td>@AlternateEmployee.PassportDate</td>
                        <td>@AlternateEmployee.SalaryDate </td>
                        <td>@AlternateEmployee.MedicalInsuranceDate</td>
                        <td>@AlternateEmployee.EidaDate</td>

                        <td>@AlternateEmployee.Objective</td>

                        <td>
                            <a asp-controller="AlternateEmployee" asp-action="edit" asp-route-id="@AlternateEmployee.Id">Edit</a>
                            |
                            <a asp-controller="AlternateEmployee" asp-action="delete" asp-route-id="@AlternateEmployee.Id" onclick="return confirm('Are you sure ?')">Delete</a>
                        </td>


                    </tr>

                }
            </tbody>
        </table>
    </div>
</body>
</html> 
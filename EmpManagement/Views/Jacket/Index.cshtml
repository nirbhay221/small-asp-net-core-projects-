@model EmpManagement.Models.Jacket

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Jacket Project List</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>
</head>
<body>
    @Html.Partial("SearchIndex.cshtml", Model)
    <a asp-controller="Jacket" asp-action="add">Add</a>

    <a asp-controller="mainhome" asp-action="newindex">Index</a>
    <div class="container-fluid py-4">
        <h4 class="text-center text-uppercase">Jacket Project List</h4>
        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-white">
                <tr>
                    <th>

                        <a asp-controller="Jacket" asp-action="SortById">Id</a>
                    </th>
                    <th>
                        <a asp-controller="Jacket" asp-action="SortByName">Name</a>
                    </th>
                    <th>
                        <a asp-controller="Jacket" asp-action="SortByDescription">Description</a>
                    </th>
                    <th>
                        <a asp-controller="Jacket" asp-action="SortByPriority">Priority</a>
                    </th>
                    <th>
                        <a asp-controller="Jacket" asp-action="SortByStatus">Status</a>
                    </th>
                    <th>
                        <a asp-controller="Jacket" asp-action="SortByRole">Role</a>
                    </th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Jacket in ViewBag.Jackets)
                {
                    <tr>
                        <td>@Jacket.Id</td>
                        <td>@Jacket.Name</td>
                        <td>@Jacket.Description</td>

                        <td>@Jacket.Priority</td>

                        <td>@Jacket.Status</td>

                        <td>@Jacket.Role</td>


                        <td>
                            <a asp-controller="Jacket" asp-action="edit" asp-route-id="@Jacket.Id">Edit</a>
                            |
                            <a asp-controller="Jacket" asp-action="delete" asp-route-id="@Jacket.Id" onclick="return confirm('Are you sure ?')">Delete</a>
                        </td>


                    </tr>

                }
            </tbody>
        </table>
    </div>
</body>
</html> 
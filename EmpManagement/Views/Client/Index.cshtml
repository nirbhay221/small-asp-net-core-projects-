
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Client Project List</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>
</head>
<body>
    <a asp-controller="Client" asp-action="add">Add</a>

    <a asp-controller="mainhome" asp-action="newindex">Index</a>
    <div class="container-fluid py-4">
        <h4 class="text-center text-uppercase">Client Project List</h4>
        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-white">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>HQ</th>
                    <th>Employees</th>
                    <th>Industry</th>
                    <th>Location</th>
                    <th>PrimaryContact</th>
                    <th>Objectives</th>
                    <th>Interactions</th>
                    <th>Contact</th>
                    <th>EmailAddress</th>

                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Client in ViewBag.Client)
                {
                    <tr>
                        <td>@Client.Id</td>
                        <td>@Client.Name</td>
                        <td>@Client.HQ</td>
                        <td>@Client.Employees</td>

                        <td>@Client.Industry</td>

                        <td>@Client.Location</td>
                        <td>@Client.PrimaryContact</td>
                        <td>@Client.Objectives</td>
                        <td>@Client.Interactions</td>
                        <td>@Client.Contact</td>
                        <td>@Client.EmailAddress</td>

                        <td>
                            <a asp-controller="Client" asp-action="edit" asp-route-id="@Client.Id">Edit</a>
                            |
                            <a asp-controller="Client" asp-action="delete" asp-route-id="@Client.Id" onclick="return confirm('Are you sure ?')">Delete</a>
                        </td>


                    </tr>

                }
            </tbody>
        </table>
    </div>
</body>
</html> 
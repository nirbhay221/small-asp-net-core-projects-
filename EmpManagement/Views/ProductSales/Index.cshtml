
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ProductSalesProject List</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>
</head>
<body>
    <a asp-controller="ProductSales" asp-action="add">Add</a>

    <a asp-controller="mainhome" asp-action="newindex">Index</a>

    <div class="container-fluid py-4">
        <h4 class="text-center text-uppercase">ProductSalesProject List</h4>
        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-white">
                <tr>
                    <th>Id</th>
                    <th>Project Name</th>
                    <th>Sales Id</th>
                    <th>Price</th>>
                </tr>
            </thead>
            <tbody>
                @foreach (var ProductSales in ViewBag.ProductSales)
                {
                    <tr>
                        <td>@ProductSales.Id</td>
                        <td>@ProductSales.Project_Name</td>
                        <td>@ProductSales.Sales_Id</td>

                        <td>@ProductSales.Price</td>

                        <td>
                            <a asp-controller="ProductSales" asp-action="edit" asp-route-id="@ProductSales.Id">Edit</a>
                            |
                            <a asp-controller="ProductSales" asp-action="delete" asp-route-id="@ProductSales.Id" onclick="return confirm('Are you sure ?')">Delete</a>
                        </td>


                    </tr>

                }
            </tbody>
        </table>
    </div>
</body>
</html> 

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AtRisk Project List</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>
</head>
<body>
    <a asp-controller="AtRisk" asp-action="add">Add Project</a>

    <a asp-controller="mainhome" asp-action="newindex">Index</a>
    <div class="container-fluid py-4">
        <h4 class="text-center text-uppercase">AtRisk Project List</h4>
        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-white">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Category</th>
                    <th>Owner</th>
                    <th>Lead</th>
                    <th>Budget</th>
                    <th>Profit</th>

                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var AtRisk in ViewBag.AtRisk)
                {
                    <tr>
                        <td>@AtRisk.Id</td>
                        <td>@AtRisk.Name</td>
                        <td>@AtRisk.Status</td>
                        <td>@AtRisk.Category</td>

                        <td>@AtRisk.Owner</td>

                        <td>@AtRisk.Lead</td>
                        <td>@AtRisk.Budget</td>
                        <td>@AtRisk.Profit</td>
                        <td>
                            <a asp-controller="AtRisk" asp-action="edit" asp-route-id="@AtRisk.Id">Edit</a>
                            |
                            <a asp-controller="AtRisk" asp-action="delete" asp-route-id="@AtRisk.Id" onclick="return confirm('Are you sure ?')">Delete</a>
                        </td>


                    </tr>

                }
            </tbody>
        </table>
    </div>
</body>
</html> 
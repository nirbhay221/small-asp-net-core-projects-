                    <th>Quantity</th>
                    <th>Project</th>
                    <th>RentedFrom</th>
                    <th>RentedTo</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var RentedForProject in Model)
                {
                    <tr>

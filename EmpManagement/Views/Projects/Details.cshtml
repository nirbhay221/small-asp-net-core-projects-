@model EmpManagement.Models.Project

@{
    ViewData["Title"] = "Details";
}

<h2>Szczegóły</h2>

<div>
    <h4>Pizza @Model.Name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Details
        </dt>
        <dd>
            <ul>
                @foreach (var ingr in Model.UsedProducts.Where(i => i.Value))
                {
                    <li>@ingr.Key</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edycja</a> |
    <a asp-action="Index">Powrót do menu</a>
</p>
